<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tableLayout1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <com.echo.holographlibrary.LineGraph
        android:id="@+id/graphFuel"
        android:layout_width="600dp"
        android:layout_height="match_parent"
        android:layout_above="@+id/textView2"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_margin="15dp"
        android:layout_weight="1" />

    <com.echo.holographlibrary.LineGraph
        android:id="@+id/graphSpeed"
        android:layout_width="600dp"
        android:layout_height="match_parent"
        android:layout_above="@+id/textView1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_margin="15dp"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/graphSpeed"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/graphSpeed"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:text="Geschwindigkeit"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/graphFuel"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/graphFuel"
        android:gravity="center"
        android:layout_marginBottom="10dp"
        android:text="Entwicklung Benzinverbrauch"
        android:textSize="30sp" />

</RelativeLayout>